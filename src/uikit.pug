extends pug/base

append vars
	- title = 'UiKit'

block content
	style.
		.elem {
			margin-bottom: 80px;
		}
		.row {
			display: flex;
			align-items: center
		}

		.switch-elem .row .col {
			flex: 0 0 15%;
		}
		.svg-icons .row .col {
			flex: 0 0 4%;
		}
		.element .row .col{
			flex: 0 0 15%;
		}

		.button .row {
			max-width: 800px;
			margin: 0 0 16px;
		}

		.button .row .col {
			width: 100%;
			margin: 0 10px;
		}

		.input .row {
			max-width: 730px;
			margin: 0 0 37px;
		}

		.input .row .col,.select .row .col {
			max-width: 350px;
			width: 100%;
			margin: 5px;
		}

		.checkbox .row {
			max-width: 350px;
		}

		.select .row {
			max-width: 730px;
		}

		.tooltip .icon {
			color: #212429;
			fill: transparent;
			width: 24px;
			height: 24px;
		}

		.tooltip .icon svg {
			width: 100%;
			height: 100%;
		}
		.links .row {
			margin-bottom: 20px;
		}
		.links .row .col{
			flex: 0 0 25%;
		}
		.nav .row .col {
		 margin-right: 40px;
		}
		.block-popup .row {
			justify-content: flex-start;
		}
		.block-popup .row .col{
			width: auto;
			max-width: none;
			margin-left: 0;
			margin-right: 30px;
		}
